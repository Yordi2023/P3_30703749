<!--TABLE VIEW-->
<table class="table table-hover view">
<thead>
    <tr class="table-dark text-white">
    <th></th>
    <th scope="col">Código</th>
    <th scope="col">Nombre</th>
    <th scope="col">Marca</th>
    <th scope="col">Descripción</th>
    <th scope="col">Precio</th>
    <th scope="col">Cantidad</th>
    <th scope="col">Categoría</th>
    <th scope="col"><%= products.length %></th>                    
    </tr>
</thead>
<tbody>
    <% products.forEach(product => { %>
    <tr class="table-light text-black">
        <td class="table-dark"><input type="hidden" name="id" value="<%= product.id %>"></td>
        <td><%= product.code %></td>
        <td><%= product.name %></td>
        <td><%= product.model %></td>
        <td><div><%= product.description %></div></td>
        <td><%= product.price %></td>
        <td><%= product.count %></td>
        <td>
            <% if(product.category_id == 1) { %>
                Cuerpo
            <% } else if (product.category_id == 2) { %>
                Manos
            <% } else if (product.category_id == 3) { %>
                Cara
            <% } else if (product.category_id == 4) { %>
                Piernas
            <% } %>
        </td>
        <td class="table-dark"></td>
    </tr>
    <% }); %>                                            
    <tr class="table-dark">
    <th scope="row" colspan="8">Total de productos</th>
    <td align="center"><%= products.length %></td>
    </tr>
</tbody>
</table>

<!--ADD-->

<form action="admin/add" method="post" class="add" enctype="multipart/form-data">
    <div class="container">
        <div class="p1">
            <div class="form-group">
                <label class="col-form-label mt-4" for="inputDefault">Nombre del producto</label>
                <input type="text" class="form-control" placeholder="Escriba el nombre del producto" name="name" required>
            </div>
            <div class="form-group">
                <label class="col-form-label mt-4" for="inputDefault">Modelo del producto</label>
                <input type="text" class="form-control" placeholder="Escriba el modelo/marca del producto" name="model" required>
            </div>
            <div class="form-group">
                <label class="col-form-label mt-4" for="inputDefault">Descripción del producto</label>
                <input type="text" class="form-control" placeholder="Escriba la descripción del producto" name="description" required>
            </div>
            <div class="form-group">
                <label class="col-form-label mt-4" for="inputDefault">Precio del producto</label>
                <input type="number" class="form-control" placeholder="Escriba el precio del producto" name="price" required>
            </div>
            <div class="form-group">
                <label class="col-form-label mt-4" for="inputDefault">Categoría del producto</label>
                <select name="category_id">
                    <option value="1">Cuerpo</option>
                    <option value="2">Manos</option>
                    <option value="3">Cara</option>
                    <option value="4">Piernas</option>
                </select>
            </div>
            <div class="form-group">
                <label class="col-form-label mt-4" for="inputDefault">Cantidad del producto</label>
                <input type="number" class="form-control" placeholder="Escriba la cantidad del producto" name="count" required>
            </div>
            <div class="form-group">
                <label class="col-form-label mt-4" for="inputDefault">Código del producto</label>
                <input type="number" class="form-control" placeholder="Escriba el código del producto" name="code" required>
            </div>
        </div>
        <div class="p2">
            <h1 class="text-black" >Imagen del producto</h1>
            <div class="containerImages">
                <% if(images.length > 0) { %>
                <% images.forEach(image => { %>
                <div class="image" id="<%= image.id %>">
                    <img src="<%= image.url %>" alt="Imagen">
                </div>
                <% }); %>
                <% } else { %>
                <div class="image">
                    <h5>No hay imágenes</h5>
                </div>
                <% } %>
            </div>
            <input type="hidden" name="image" id="inputImage" value="0">
        </div>
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Agregar</button>
    </div>
</form>

<!--MANAGE IMAGES-->
<div class="manage-images">
    <h1>Gestor de imágenes</h1>
    <div class="containerImage">                
        <% products.forEach(product => { %>
            <div class="image mImg">
                <div><p><%= product.name %></p><a class="deleteImage" href="admin/delete-image/" id="<%= product.id %>">X</a></div>
                <% if(product.image_id != 0) { %>
                <% images.forEach(image => { %>
                    <% if(image.id == product.image_id) { %>
                            <img src="<%= image.url %>" alt="Imagen" id="<%= image.id %>">
                    <% } %>
                   <% }); %>
                <% } else { %>
                    <img src="images/none.jpg" alt="Imagen" id="<%= product.image_id %>">
                <% } %>
            </div>
        <% }); %>
    </div>
    <form ref="uploadForm" action="admin/upload" method="post" id="uploadForm" class="dropzone" enctype="multipart/form-data">
        <h3>Agregar una imagen</h3>
        <input class="btn btn-lg btn-primary" type="file" name="sampleFile">
        <input class="btn btn-success" type="submit" value="Subir">
    </form>
</div>

