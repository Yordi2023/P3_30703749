<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>S&S - Home</title>
    <link rel="stylesheet" href="/stylesheets/cards.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container px-4 px-lg-5">
        <div style="display: flex; gap: 10px;">
            <a class="navbar-brand" href="#!">
                <div class="loge">S</i><sub>&</sub><i>S</i></div>
            </a>
            <button class="btn-link" id="ordenar">Listar</button>
            <form action="/" method="post" class="d-flex">
                <input name="name" class="form-control me-sm-2" type="search" placeholder="Nombre completo del producto">
                <button class="btn btn-secondary my-2 my-sm-0" type="submit">Filtrar</button>
            </form>
        </div>
            <form action="#" method="post" class="d-flex">
                <button class="btn btn-outline-dark" type="submit">
                    <i class="bi bi-person-fill-gear"></i>
                    Iniciar Sesi√≥n
                </button>
            </form>
        </div>
    </div>
</nav>
      <header class="bg-dark py-5 banner">
            <div class="container px-4 px-lg-5 my-5">
                <div class="text-center text-white">
                    <h1 class="display-4 fw-bolder"></h1>
                    
                </div>
            </div>
        </header>
    <main class="container-products grid">
        <% products.forEach(product=> { %>
    
            <div class="card mb-3">
                <div>
                    <h3 class="card-header" style="word-break: break-all; overflow: hidden;">
                        <%= product.name %>
                    </h3>
                </div>
                <div class="card-body">
                    <h5 class="card-title">
                        <%= product.model %>
                    </h5>
                    <h6 class="card-subtitle text-muted">
                        <%= product.description %>
                    </h6>
                </div>
                <% if(product.image_id !=0) { %>
                    <% images.forEach(image=> { %>
                        <% if(image.id==product.image_id) { %>
                            <img src="<%= image.url %>" alt="Imagen" id="<%= image.id %>" width="100%">
                            <% } else { %>
                                <% } %>
                                    <% }); %>
                                        <% } else { %>
                                            <div>Sin imagen</div>
                                            <% } %>
                                                <div class="card-footer text-muted"
                                                    style="display: flex; justify-content: space-around;">
                                                    <div>
                                                        <%= product.price %>$
                                                    </div>
                                                </div>
                        
            </div>
    
            <% }) %>
    </main>
        <footer class="py-5 bg-dark">
            <div class="container"><p class="m-0 text-center text-white">Copyright &copy; S&S 2023</p></div>
        </footer>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
        <script src="/javascripts/scripts.js"></script>
        <script src="/javascripts/listar.js"></script>
</body>
</html>